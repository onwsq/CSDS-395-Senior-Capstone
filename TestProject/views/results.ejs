<!DOCTYPE HTML>
<html lang="zxx">
    <head>
        <%- include('header.ejs') %>
    </head>
    <body>
		<section class="hero-area" id="home">
			<div class="container">
				<div class="hero-area-slider">
					<% for(var i = 0 ; i < results.length ; i++) { %>
					<div class="row hero-area-slide">
						<div class="col-lg-6 col-md-5">
							<div class="hero-area-content">
								<img src="assets/img/slide1.png" alt="about" />
							</div>
						</div>
						<div class="col-lg-6 col-md-7">
							<div class="hero-area-content pr-50">
								<h2><%=results[i][0]%></h2>
								<p><%=results[i][1]%></p>
								<h3>Release Date: <%=results[i][3]%></h3>
								
								
							</div>
						</div>
					</div>
					<% } %>
				</div>
				<div class="hero-area-thumb">
					<div class="thumb-prev">
						<div class="row hero-area-slide">
							<div class="col-lg-6">
								<div class="hero-area-content">
									<img src="assets/img/slide1.png" alt="about" />
								</div>
							</div>
							<div class="col-lg-6">
								<div class="hero-area-content pr-50">
									<h2><%=results[1][0]%></h2>
									<p><%=results[1][1]%></p>
									<h3>Release Date: <%=results[1][3]%></h3>
									
								</div>
							</div>
						</div>
					</div>
					<div class="thumb-next" >
						<div class="row hero-area-slide">
							<div class="col-lg-6">
								<div class="hero-area-content">
									<img src="assets/img/slide1.png" alt="about" />
								</div>
							</div>
							<div class="col-lg-6">
								<div class="hero-area-content pr-50">
									<h2><%=results[results.length-1][0]%></h2>
									<p><%=results[results.length-1][1]%></p>
									<h3>Release Date: <%=results[results.length-1][3]%></h3>
									<h3>Cast:</h3>
									
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- jquery main JS -->
		<script src="assets/js/jquery.min.js"></script>
		<!-- Bootstrap JS -->
		<script src="assets/js/bootstrap.min.js"></script>
		<!-- Slick nav JS -->
		<script src="assets/js/jquery.slicknav.min.js"></script>
		<!-- owl carousel JS -->
		<script src="assets/js/owl.carousel.min.js"></script>
		<!-- Popup JS -->
		<script src="assets/js/jquery.magnific-popup.min.js"></script>
		<!-- Isotope JS -->
		<script src="assets/js/isotope.pkgd.min.js"></script>
		<!-- main JS -->
		<script src="assets/js/main.js"></script>
    <body>
        

</html>