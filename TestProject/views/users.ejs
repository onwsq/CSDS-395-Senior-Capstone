
<!DOCTYPE html>
<html lang="en">

<meta charset="utf-8">
<title>User Profiles</title>
<meta charset="utf-8">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="stylesheets/style.css">
<head>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <p class="navbar-brand">CinemUs</p>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li id="home"><a href="/">Home</a></li>
          <li id="userprofiles"><a href="/users">User Profiles</a></li>
          <li id="algorithm"><a href="/algorithm">Begin Algorithm</a></li>
        </ul>
      </div>
    </nav>
</head>
<div class="usersbody" id="userbody">
    <div class="positionProfileButton" id="positionProfileButton">
        <button class="addProfileButton" role="button" onclick="onClickEvent()">Add Profile</button>
    </div><br><br>
    <div class="container">
      <h1>Existing Profiles</h1>
      <div class="rowexisting" id="rowprofiles">
        <% for(var i = 0 ; i < algorithmlist.length ; i++) { %>
          <label>
            <div class="icon-boxexisting">
              <i class="fa fa-heart"></i>
              <span><%=algorithmlist[i]%></span>
            </div>
          </label>
        <% } %>
      </div>
    </div>
  </div>
</div>




<script> //separate
  console.log('here')
  var conditional = '<%=newProfile%>';
  if(conditional == 'yes'){
    document.getElementById("userbody").innerHTML += '<div class="popup"><h2>Profile Created</h2><a class="close" href="/users">&times;</a><div class="content">The profile has been saved and will be available for selection.</div></div>';
  }
  function onClickEvent(){
    location.href = "http://localhost:8888/newprofile";
    console.log(window.href);
  }
